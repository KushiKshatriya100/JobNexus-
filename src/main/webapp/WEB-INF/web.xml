<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>JobPortal</display-name>


    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- All Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.parent.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.parent.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JobsServlet</servlet-name>
        <servlet-class>com.parent.controller.JobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobsServlet</servlet-name>
        <url-pattern>/jobs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApplyServlet</servlet-name>
        <servlet-class>com.parent.controller.ApplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyServlet</servlet-name>
        <url-pattern>/apply</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteJobServlet</servlet-name>
        <servlet-class>com.parent.controller.DeleteJobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteJobServlet</servlet-name>
        <url-pattern>/deletejob</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadResumeServlet</servlet-name>
        <servlet-class>com.parent.controller.DownloadResumeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadResumeServlet</servlet-name>
        <url-pattern>/downloadresume</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.parent.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageJobsServlet</servlet-name>
        <servlet-class>com.parent.controller.ManageJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageJobsServlet</servlet-name>
        <url-pattern>/managejobs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyApplicationsServlet</servlet-name>
        <servlet-class>com.parent.controller.MyApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyApplicationsServlet</servlet-name>
        <url-pattern>/myapplications</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostJobServlet</servlet-name>
        <servlet-class>com.parent.controller.PostJobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostJobServlet</servlet-name>
        <url-pattern>/postjob</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.parent.controller.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecruiterDashboardServlet</servlet-name>
        <servlet-class>com.parent.controller.RecruiterDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecruiterDashboardServlet</servlet-name>
        <url-pattern>/recruiterdashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateApplicationStatusServlet</servlet-name>
        <servlet-class>com.parent.controller.UpdateApplicationStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateApplicationStatusServlet</servlet-name>
        <url-pattern>/updateapplicationstatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>com.parent.controller.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/updateprofile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadResumeServlet</servlet-name>
        <servlet-class>com.parent.controller.UploadResumeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadResumeServlet</servlet-name>
        <url-pattern>/uploadresume</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewApplicationsServlet</servlet-name>
        <servlet-class>com.parent.controller.ViewApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewApplicationsServlet</servlet-name>
        <url-pattern>/viewapplications</url-pattern>
    </servlet-mapping>

</web-app>
